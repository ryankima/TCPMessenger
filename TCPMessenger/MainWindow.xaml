<Window x:Class="TCPMessengerServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <TextBlock Width="288pt" HorizontalAlignment="Left" Name="Messages"></TextBlock>
        <StackPanel HorizontalAlignment="Right" Orientation="Vertical">
            <Button Width="72pt" Height="25pt" Name="Connect">Connect</Button>
            <Button Width="72pt" Height="25pt" Name="Send">Send Message</Button>
            <Button Width="72pt" Height="25pt" Name="End">End</Button>
        </StackPanel>
        <TextBox Width="144pt" Height="25pt" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,100,0" Name="Ip"></TextBox>
        <TextBox Width="288pt" Height="144pt" HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="Message"></TextBox>
    </Grid>
</Window>
